# AI 提供商配置 (openai 或 gemini)
AI_PROVIDER=gemini  # 默认使用 gemini
# AI_PROVIDER=openai   # 如果要使用 OpenAI，取消注释此行

# OpenAI API配置
OPENAI_API_KEY=your-api-key-here
OPENAI_API_BASE=https://api.openai.com/v1  # 可选，默认为官方API地址

# Gemini API 配置 (如果 AI_PROVIDER 设置为 "gemini")
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash  # 更新为稳定版本

# 服务设置
HOST=0.0.0.0
PORT=5000
DEBUG=True

# 模型设置
OPENAI_MODEL=gpt-3.5-turbo
# 可选模型: gpt-3.5-turbo, gpt-4, gpt-4-turbo (根据API访问情况调整)

# 安全设置 (可选)
ACCESS_TOKEN=your_access_token_here

# 数据库配置
DATABASE_URL=sqlite:///db/dev.db

# 缓存配置
ENABLE_CACHE=True
CACHE_EXPIRATION=86400
REDIS_URL=redis://localhost:6379/0

# 安全功能配置（可选，默认禁用）
ENABLE_RATE_LIMIT=False
ENABLE_INPUT_VALIDATION=False

# 外部题库配置（可选，默认启用）
ENABLE_EXTERNAL_DATABASE=True
EXTERNAL_DATABASE_TIMEOUT=10

# 速率限制配置（当ENABLE_RATE_LIMIT=True时生效）
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_TIME_WINDOW=3600

# 日志配置
LOG_LEVEL=INFO

# API配置
MAX_TOKENS=100000
TEMPERATURE=0.7