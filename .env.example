# OpenAI API配置
OPENAI_API_KEY=your-api-key-here
OPENAI_API_BASE=https://api.openai.com/v1  # 可选，默认为官方API地址

# AI 提供商配置 (openai 或 gemini)
# AI_PROVIDER=gemini  # 默认使用 gemini (在 config.py 中设置)
# AI_PROVIDER=openai   # 如果要使用 OpenAI，取消注释此行并设置上面的 AI_PROVIDER

# Gemini API 配置 (如果 AI_PROVIDER 设置为 "gemini")
# GEMINI_API_KEY=your-gemini-api-key-here
# GEMINI_MODEL=gemini-pro # 可选，默认为 gemini-pro


# 服务设置
HOST=0.0.0.0
PORT=5000
DEBUG=True

# 模型设置
OPENAI_MODEL=gpt-3.5-turbo
# 可选模型: gpt-3.5-turbo, gpt-4, gpt-4-turbo (根据API访问情况调整)

# 安全设置 (可选)
# ACCESS_TOKEN=your_access_token_here